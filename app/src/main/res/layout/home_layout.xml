<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bamboo">



    <TextView
        android:id="@+id/playGame"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/algorithms_color"
        android:text="Начать игру"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/studyButton"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/algorithms_color"
        android:src="@drawable/panda_study"
        app:layout_constraintBottom_toTopOf="@+id/playGame"
        app:layout_constraintEnd_toEndOf="@+id/playGame" />

</androidx.constraintlayout.widget.ConstraintLayout>